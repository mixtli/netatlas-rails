= simple_form_for(@data_template, :html => {:class => 'form-horizontal'}) do |f|
  = f.error_messages
  .form-inputs
    = f.input :name
    = f.association :plugin
    = f.input :node_type, :as => :select, :options => ['Device', 'Interface', 'Service']
    = f.input :interval
    = f.input :warning_threshold
    = f.input :critical_threshold
    = f.input :operator, :as => :select, :collection => ['>','<']
    = f.input :arguments, :as => :text

  .form-actions
    = f.button :submit, :id => 'create_data_template'
